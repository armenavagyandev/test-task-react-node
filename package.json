{
  "name": "test-task-react-node",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "client": "vite",
    "server": "nodemon --watch api --ext ts --exec ts-node ./api/server.ts",
    "build": "tsc -p ./api/tsconfig.json && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "yarn build && node ./api/dist/server.js",
    "start:dev": "concurrently \"yarn server\" \"yarn client\"",
    "db:migrate": "ts-node ./api/db/migrate.ts",
    "db:seed": "ts-node ./api/db/seed.ts"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "express": "^5.1.0",
    "lucide-react": "^0.544.0",
    "mysql2": "^3.15.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.13",
    "vite-tsconfig-paths": "^5.1.4",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/axios": "^0.14.4",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.3",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/yup": "^0.32.0",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7"
  }
}
